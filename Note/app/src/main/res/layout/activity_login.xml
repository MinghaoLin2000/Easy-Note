<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_widget"
    tools:context=".LoginActivity"
    android:orientation="vertical">
    <include
        android:id="@+id/main_title"
        layout="@layout/title_layout" />
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        >
        <View
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            />
        <ImageView

            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@drawable/shengdangwu"
            />
        <View
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            />
        <ImageView

            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@drawable/shengdanglaoren"
            />
        <View
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            />
        <ImageView

            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@drawable/shengdangshu12"
            />
        <View
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H A P P Y NEW YEAR"
            android:textSize="24sp"
            android:textColor="@color/white"

            />
        <View
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <View
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Merry Christmas"
            android:textColor="@color/white"

            />
        <View
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="25dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_border_login"
        android:gravity="center"


        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/login_vi"
            android:src="@drawable/shengdangwa"
            android:layout_toLeftOf="@+id/et_username"

            />
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:id="@+id/et_username"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_vi"

            android:layout_toLeftOf="@+id/et_password"
            android:src="@drawable/shengdangshoutao" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_username"
            android:inputType="textPassword"
            android:hint="Password"
            android:layout_below="@+id/et_username"
            android:id="@+id/et_password"/>
    </RelativeLayout>

